{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "src/client/build",
  "builds": [
    {
      "src": "src/server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/server/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/src/server/server.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/src/client/build/static/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/src/client/build/images/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/src/client/build/manifest.json"
    },
    {
      "src": "/asset-manifest.json",
      "dest": "/src/client/build/asset-manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/src/client/build/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/src/client/build/index.html"
    }
  ]
} 